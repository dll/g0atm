pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                bat 'python -m py_compile Customer.py DbUtil.py'
            }
        }
        stage('UnitTest') {
            steps {
		        bat 'py.test --verbose --junit-xml test-reports/results.xml test_customer.py test_dbutil.py'
            }
            post {
               always {
                   junit 'test-reports/results.xml'
               }
            }
        }
        stage('IntergrateTest') {
            steps{
                bat 'python -m py_compile intergrateTest.py'
            }

        }
        stage('Deliver') {
            steps {
                bat 'pyinstaller -F Customer.py -n login_atm.exe'
            }
            post {
                success {
                    archiveArtifacts 'dist/login_atm.exe'
                }
            }
        }
    }
}